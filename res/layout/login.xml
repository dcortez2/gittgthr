<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context="com.example.manrajsingh960.gettogether.Login">

    <TextView
        android:id="@+id/loginLogo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="GT"
        android:textAlignment="center"
        android:textColor="#CDAE71"
        android:textSize="75sp"
        android:fontFamily="casual"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Get Together"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="#CDAE71"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="59dp"
        app:layout_constraintBottom_toBottomOf="@+id/printPassword"
        android:layout_marginEnd="59dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="104dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="108dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginLogo"
        android:layout_marginLeft="59dp"
        android:layout_marginRight="59dp" />

    <EditText
        android:id="@+id/inputUsername"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/login_buttons"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/inputPassword"
        android:layout_marginTop="215dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/inputPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/login_buttons"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="41dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/inputUsername"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/buttonLogin"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="41dp" />

    <TextView
        android:id="@+id/printUsername"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:text="Username"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@+id/inputUsername"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/inputUsername"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/printPassword" />

    <TextView
        android:id="@+id/printPassword"
        android:layout_width="135dp"
        android:layout_height="27dp"
        android:text="Password"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/inputPassword"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Login"
        android:textSize="15sp"
        android:background="@drawable/login_buttons"
        android:onClick="goToMainMenu"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonCreateAccount"
        app:layout_constraintRight_toRightOf="@+id/buttonCreateAccount"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonCreateAccount" />

    <Button
        android:id="@+id/buttonCreateAccount"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="Create Account"
        android:textSize="15sp"
        android:background="@drawable/login_buttons"
        android:onClick="goToCreateAccountForm"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="69dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
